/**index.wxss**/


.page {
  margin-top: 20rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.container {
  padding: 0 0 10px 0;
}

.logo-area {
  display: flex;
  justify-content: space-between;
}

.logoImg {
  width: 412px;
  height: 106px;
}

/* 轮播图子项 */
.swiper-item-area {
  width: 310px !important;
  height: 80% !important;
  border-radius: 10px;
}

.weui-media-box__title {
  color: #fff;
}

.weui-media-box__desc {
  color: #fff;
  font-size: 20px;
  font-weight: bold;
}

/* 轮播图子项 */

.userinfo-area {
  border: 1px solid #ededed;
  border-radius: 10px;
}

.itemIcon {
  width: 96rpx !important;
  height: 96rpx;
}

/* badge */
.itemHeaderTxt {
  font-size: 1.2em;
  font-weight: bold;
}

.demo_badge_cells {
  width: 350px !important;
}

.demo_badge_cells .weui-cell__hd {
  position: relative;
  margin-right: 20px
}

.demo_badge_cells .weui-cell__hd image {
  width: 50px;
  display: block
}

.demo_badge_cells .weui-cell__hd .weui-badge {
  position: absolute;
  top: -.4em;
  right: -.4em
}

.demo_badge_cells .weui-cell__bd .demo_badge_title {
  vertical-align: middle
}

.demo_badge_cells .weui-cell__bd .demo_badge_title+.weui-badge {
  margin-left: 5px
}

.demo_badge_cells .weui-cell__bd .demo_badge_desc {
  font-size: .9em;
  color: #888
}

.button-sp-area {
  padding-top: 15px;
  text-align: center
}

.weui-btn_mini {
  margin-right: 4px;
  width: 100px !important;
}

/* 导航条 */
.weui-tab__content {
  padding-top: 60px;
  text-align: center
}